---
interface Props {
  currentPath?: string;
}

const { currentPath = '' } = Astro.props;

const navItems = [
  { href: '/blog', label: 'Blog', icon: 'üìù' },
  { href: '/blog/category/tutorial', label: 'Tutorials', icon: 'üìö' },
  { href: '/blog/category/announcement', label: 'News', icon: 'üì¢' },
  { href: 'https://cli.firstmovers.io', label: 'App', icon: 'üöÄ', external: true },
  { href: 'https://github.com/hien-p/raycast-sui-cli', label: 'GitHub', icon: '‚≠ê', external: true },
];
---

<header class="header-nav sticky top-0 z-40 border-b transition-colors">
  <nav class="max-w-4xl mx-auto px-4 py-3">
    <div class="flex items-center justify-between">
      <!-- Logo / Brand -->
      <a href="/blog" class="flex items-center gap-2.5 group">
        <div class="flex gap-1">
          <span class="w-2.5 h-2.5 rounded-full bg-red-500"></span>
          <span class="w-2.5 h-2.5 rounded-full bg-yellow-500"></span>
          <span class="w-2.5 h-2.5 rounded-full bg-green-500"></span>
        </div>
        <span class="header-brand font-mono text-sm transition-colors">
          ~/blog
        </span>
      </a>

      <!-- Navigation -->
      <ul class="flex items-center gap-1">
        {navItems.map((item) => {
          const isActive = currentPath === item.href ||
            (item.href !== '/blog' && currentPath.startsWith(item.href));

          return (
            <li>
              <a
                href={item.href}
                target={item.external ? '_blank' : undefined}
                rel={item.external ? 'noopener noreferrer' : undefined}
                class:list={[
                  'header-nav-item flex items-center gap-1.5 px-3 py-1.5 rounded-lg text-sm font-mono transition-all',
                  isActive ? 'active' : '',
                ]}
              >
                <span class="text-xs">{item.icon}</span>
                <span class="hidden sm:inline">{item.label}</span>
                {item.external && (
                  <svg class="w-3 h-3 opacity-50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                )}
              </a>
            </li>
          );
        })}
      </ul>
    </div>
  </nav>
</header>

<style>
  /* Dark mode (default) */
  .header-nav {
    background-color: rgba(10, 10, 10, 0.92);
    border-color: rgba(255, 255, 255, 0.1);
  }

  .header-brand {
    color: rgba(255, 255, 255, 0.8);
  }

  .header-brand:hover {
    color: white;
  }

  .header-nav-item {
    color: rgba(255, 255, 255, 0.6);
  }

  .header-nav-item:hover {
    color: white;
    background-color: rgba(255, 255, 255, 0.1);
  }

  .header-nav-item.active {
    color: white;
    background-color: rgba(255, 255, 255, 0.15);
  }

  /* Light mode */
  :global([data-theme="light"]) .header-nav {
    background-color: rgba(250, 250, 250, 0.95);
    border-color: rgba(0, 0, 0, 0.1);
  }

  :global([data-theme="light"]) .header-brand {
    color: rgba(0, 0, 0, 0.8);
  }

  :global([data-theme="light"]) .header-brand:hover {
    color: rgba(0, 0, 0, 1);
  }

  :global([data-theme="light"]) .header-nav-item {
    color: rgba(0, 0, 0, 0.6);
  }

  :global([data-theme="light"]) .header-nav-item:hover {
    color: rgba(0, 0, 0, 0.9);
    background-color: rgba(0, 0, 0, 0.05);
  }

  :global([data-theme="light"]) .header-nav-item.active {
    color: rgba(0, 0, 0, 0.9);
    background-color: rgba(0, 0, 0, 0.08);
  }
</style>
