---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/astro/Header.astro';
import AnimatedGradientBackground from '../components/ui/animated-gradient-background';
---

<BaseLayout
  title="404 - Page Not Found"
  description="The page you're looking for doesn't exist or is coming soon."
>
  <!-- Animated Gradient Background -->
  <div class="fixed inset-0 -z-10">
    <AnimatedGradientBackground
      client:load
      breathing={true}
      startingGap={125}
      breathingRange={5}
      animationSpeed={0.02}
      topOffset={0}
    />
  </div>

  <Header currentPath="" />

  <main class="min-h-screen flex items-center justify-center px-4">
    <div class="text-center max-w-lg">
      <!-- Terminal-style error -->
      <div class="mb-8 p-6 rounded-xl bg-black/40 backdrop-blur-xl border border-white/10 text-left font-mono">
        <div class="flex items-center gap-2 mb-4">
          <span class="w-3 h-3 rounded-full bg-[#ef4444]"></span>
          <span class="w-3 h-3 rounded-full bg-[#eab308]"></span>
          <span class="w-3 h-3 rounded-full bg-[#22c55e]"></span>
          <span class="ml-2 text-white/40 text-sm">terminal</span>
        </div>

        <div class="space-y-2 text-sm">
          <div>
            <span class="text-green-400">$</span>
            <span class="text-white/80 ml-2">curl {Astro.url.pathname}</span>
          </div>
          <div class="text-[#ef4444]">
            Error: 404 - Page not found
          </div>
          <div class="text-white/50">
            The requested resource doesn't exist or is coming soon.
          </div>
        </div>
      </div>

      <!-- Big 404 -->
      <h1 class="text-8xl font-bold text-white/10 mb-4">404</h1>

      <!-- Message -->
      <h2 class="text-2xl font-semibold text-white mb-2">Page Not Found</h2>
      <p class="text-white/60 mb-8">
        This page might be coming soon, or you followed a broken link.
      </p>

      <!-- Actions -->
      <div class="flex flex-col sm:flex-row gap-3 justify-center">
        <a
          href="/blog"
          class="px-6 py-3 bg-primary text-white rounded-lg font-mono hover:bg-primary/90 transition-colors inline-flex items-center justify-center gap-2"
        >
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
            <path d="M12 8H4M4 8L7 5M4 8L7 11" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          Back to Blog
        </a>
        <a
          href="https://cli.firstmovers.io"
          target="_blank"
          rel="noopener noreferrer"
          class="px-6 py-3 bg-white/5 border border-white/10 text-white/80 rounded-lg font-mono hover:bg-white/10 transition-colors inline-flex items-center justify-center gap-2"
        >
          Launch App
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
            <path d="M4.66669 11.3333L11.3334 4.66666M11.3334 4.66666H6.00002M11.3334 4.66666V10" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
      </div>

      <!-- Hint -->
      <p class="mt-8 text-white/40 text-sm font-mono">
        Press <kbd class="px-2 py-1 bg-white/10 rounded text-white/60">Cmd+K</kbd> anywhere to search
      </p>
    </div>
  </main>
</BaseLayout>
